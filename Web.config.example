<?xml version="1.0" encoding="utf-8"?>
<!--
  CHORDAL WEB PLATFORM - Configuration Template
  
  Instructions:
  1. Copy this file and rename it to "Web.config"
  2. Replace all placeholder values with your actual configuration
  3. NEVER commit the actual Web.config file to version control
  
  Security Notes:
  - Keep your connection strings and SMTP credentials secure
  - Use environment-specific configurations for dev/staging/production
  - Consider using Azure Key Vault or similar for production secrets
-->
<configuration>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  </configSections>
  
  <connectionStrings>
    <!-- MySQL Connection String Example -->
    <add name="ConnectionString" 
         connectionString="Server=localhost;Database=ChordalDB;User Id=your_mysql_user;Password=your_mysql_password;SslMode=none;" 
         providerName="MySql.Data.MySqlClient" />
    
    <!-- SQL Server Connection String Example (Alternative) -->
    <!--
    <add name="ConnectionString" 
         connectionString="Server=localhost;Database=ChordalDB;User Id=your_sql_user;Password=your_sql_password;Encrypt=true;TrustServerCertificate=true;" 
         providerName="System.Data.SqlClient" />
    -->
  </connectionStrings>
  
  <appSettings>
    <!-- Email/SMTP Configuration -->
    <add key="SmtpHost" value="smtp.gmail.com" />
    <add key="SmtpPort" value="587" />
    <add key="SmtpUsername" value="your-email@gmail.com" />
    <add key="SmtpPassword" value="your-app-specific-password" />
    <add key="SmtpEnableSSL" value="true" />
    <add key="SmtpFromEmail" value="noreply@chordal.com" />
    
    <!-- Application Settings -->
    <add key="SiteUrl" value="https://localhost:44300" />
    <add key="MaxUploadSizeBytes" value="10485760" />
    <add key="JwtSecretKey" value="your-super-secret-jwt-key-min-32-characters-long!" />
  </appSettings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.7.2" />
    <httpRuntime targetFramework="4.7.2" maxRequestLength="10240" />
    
    <authentication mode="Forms">
      <forms loginUrl="~/Login.aspx" timeout="30" slidingExpiration="true" />
    </authentication>
    
    <customErrors mode="Off" />
  </system.web>
  
  <system.webServer>
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
